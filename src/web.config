<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <clear />
        <rule name="app" stopProcessing="true">
          <match url="(index.html|*.js|*.css|*.ico)" />
          <action type="None" />
        </rule>
        <rule name="routes">
          <match url="(.*)" />
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>

